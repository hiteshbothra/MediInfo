<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bhavesh.mediinfo.Disease">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dentist"
            android:id="@+id/dentist"
            android:onClick="onDiseaseButtonClick" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Gynecologist/Obstetrician"
            android:id="@+id/gynecologist"
            android:onClick="onDiseaseButtonClick" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dermatologist"
            android:id="@+id/dermatologist"
            android:onClick="onDiseaseButtonClick" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cardiologist"
            android:id="@+id/cardiologist"
            android:onClick="onDiseaseButtonClick" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="General Physician"
            android:id="@+id/g_physician"
            android:onClick="onDiseaseButtonClick" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Neurologist"
            android:id="@+id/neurologist"
            android:onClick="onDiseaseButtonClick" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Psychiatrist"
            android:id="@+id/psychiatrist"
            android:onClick="onDiseaseButtonClick" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>
